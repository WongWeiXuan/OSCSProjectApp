<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDialog?>
<?import com.jfoenix.controls.JFXDialogLayout?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="log.controller.LogPageController">
   <children>
      <StackPane fx:id="logStackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox spacing="20.0">
               <children>
                  <TextFlow textAlignment="CENTER">
                     <children>
                        <Label style="-fx-font-family: &quot;Source Sans Pro&quot;;" text="A very ugly log page">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                  </TextFlow>
                  <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox HBox.hgrow="ALWAYS">
                           <children>
                              <JFXTreeTableView fx:id="logTable" maxWidth="1.7976931348623157E308" prefHeight="644.0" prefWidth="770.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <VBox spacing="10.0">
                           <children>
                              <JFXComboBox fx:id="filterCombo" onAction="#changeLogView" prefHeight="31.0" prefWidth="169.0" />
                              <JFXTextField fx:id="filterInput" />
                              <JFXButton fx:id="updateBtn" onAction="#updateAndGetLogs" text="Get / Update" />
                              <JFXButton fx:id="filterBtn" onAction="#filterLogs" text="Filter" />
                              <JFXButton fx:id="downloadBtn" onAction="#establishFileTransfer" text="Download Logs" />
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <JFXDialog fx:id="jfxDialog">
               <children>
                  <JFXDialogLayout fx:id="jfxDialogLayout">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="10.0">
                           <children>
                              <TextFlow textAlignment="CENTER">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: &quot;Source Sans Pro&quot;;" text="Please wait" textAlignment="CENTER">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </TextFlow>
                              <TextFlow textAlignment="CENTER">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: &quot;Source Sans Pro&quot;;" text="Retrieving logs..." textAlignment="CENTER">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </TextFlow>
                              <HBox>
                                 <VBox.margin>
                                    <Insets bottom="20.0" />
                                 </VBox.margin>
                                 <children>
                                    <JFXProgressBar maxWidth="1.7976931348623157E308" minHeight="20.0" HBox.hgrow="ALWAYS">
                                       <padding>
                                          <Insets left="20.0" right="20.0" />
                                       </padding>
                                    </JFXProgressBar>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </JFXDialogLayout>
               </children>
            </JFXDialog>
         </children>
      </StackPane>
   </children>
</AnchorPane>
